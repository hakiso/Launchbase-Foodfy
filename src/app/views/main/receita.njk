{% extends 'layout.njk' %}

{% block content%}
     <section class="receita">
        <div class="banner-img">
            <img src="{{files[0].src}}" alt="Imagem de {{recipe.image}} ">
        </div>
        <div class="card-title">
           <h1>{{recipe.title}}</h1>
           <p>por {{chef.name}}</p>
        </div>
        <div class="topic " id="ingredients">
        <h1>Ingredientes <a>ESCONDER</a></h1> 
        <div class="topic-content">
            <ul>
               {% for ingredient in recipe.ingredients%}
               <li>{{ingredient}}</li>
               {%endfor%}
            </ul>
        </div>
        </div>
        <div class="topic" id="preparation">
        <h1>Modo de preparo <a>MOSTRAR</a></h1> 
           <div class="topic-content hidden">
            <ul>
               {% for preparation in recipe.preparation%}
               <li>{{preparation}}</li>
               {%endfor%}
            </ul>
          </div>
        </div>
        <div class="topic" id="information">
        <h1>Informações adicionais<a >MOSTRAR</a></h1> 
        <div class="topic-content hidden">
            <p>{{recipe.information}}</p>
        </div>
        </div>
    </section><!-- banner -->
    <script src="/js/script.js"></script>
{%endblock%}