{% extends "admin.njk" %}

{% block content %}

<form class="card" method="POST" action="/admin/chef" enctype="multipart/form-data">
    <section class="details">

        <h3>Criando chef</h3>
    <button type="submit">Salvar chef</button>


       <div class="item">
    <div class="title">Nome</div>
    <div>
        <input 
            type="text"
            name="name"
            value="{{ chef.name }}"
        >
    </div>
</div>

<div class="item">
    <div class="title">Avatar</div>
    <div class="chef_button">
        Enviar Avatar
        <input 
            id="photo_chef"
            type="file"
            name="photos"
            accept="image/*"
            onchange="PhotosUpload.handleFileInput(event)">
    </div>
</div>

    </section>
</form>

{% endblock content %}