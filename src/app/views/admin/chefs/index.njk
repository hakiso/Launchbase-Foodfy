{% extends 'admin.njk' %}

{% block content %}
    <section class="container">
        <div class="title">
            <h2>Gerenciar chefs</h2>
            {% if session.isAdmin %}
            <a class="btn" href="/admin/chefs/create">Novo chefe</a>
            {% endif %}
        </div>
        <div class="chefes">
            {% for chef in chefs %}
                <div class="chef">
                    <img src="{{chef.src}}" alt="">
                    <div style="padding-left: 20px;">
                        <h3 class="nome">{{chef.name}}</h3>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    
{% endblock content %}