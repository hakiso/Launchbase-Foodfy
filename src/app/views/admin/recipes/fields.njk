<div class="item">
    <div class="title">Imagem da receita</div>
    <div class="container-uploader">
        <div id="photos-upload">
            <i class="material-icons">
                add
            </i>
            <input 
                id="photos-input" 
                type="file" 
                name="photos" 
                multiple 
                accept="image/*" 
                onchange="PhotosUpload.handleFileInput(event)">
        </div>
        <div id="photos-preview">
                {% for file in files %}
                    <div class="photo" id="{{file.id}}">
                        <img src="{{file.src}}" alt="{{file.name}}">
                        <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">
                            close
                        </i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
        </div>
    </div>
</div>

<div class="item">
    <div class="title">Chef</div>
    <div>
        <select name="chef">
        {% for chef in chefOptions %}
            <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %}selected{% endif %}>
                {{chef.name}}
            </option>
            {% endfor %}     
        </select>
    </div>
</div>

<div class="item">
    <div class="title">Título</div>
    <div>
        <input 
            type="text"
            name="title"
            value="{{recipe.title}}"
            placeholder=""
        >
    </div>
</div>

<div class="item" id="ingredients">
    <div class="title">Ingredientes</div>

    {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text"
                name="ingredients[]"
                value="{{ingredient}}"
                placeholder="Ingrediente"
            >

        </div>

        {% else %}

        <div class="ingredient">
            <input 
                type="text"
                name="ingredients[]"
                value=""
                placeholder="Ingrediente"
            >
        </div>
        
    {% endfor %}
</div>
<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

<div class="item" id="passos">
    <div class="title">Modo de preparo</div>
        {% for preparation in recipe.preparation %}
            <div class="passo">
                <input 
                    type="text"
                    name="preparation[]"
                    value="{{preparation}}"
                    placeholder="Preparo"
                >
            </div>
        {% else %}
            <div class="passo">
                <input 
                    type="text"
                    name="preparation[]"
                    value=""
                    placeholder="Preparo"
                >
            </div>
        {% endfor %}
</div>
<button type="button" class="add-passo">Adicionar novo passo</button>

<div class="item">
    <div class="title">Informações adicionais</div>
    <div>
        <textarea name="information" id="info" cols="30" rows="10">{{recipe.information}}</textarea>
    </div>
</div>
           

<script src="/js/button.js"></script>