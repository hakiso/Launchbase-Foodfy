{% extends 'admin.njk' %}

{%block css%}
    <link rel="stylesheet" href="/admin.css">
{%endblock%}

{% block title%}
    <title>{{recipe.title}}</title>
{%endblock%}


{% block content%}
     <section class="recipe">
         <div class="por">
             <h1>Receita: {{recipe.title}}</h1>
             <a href="/admin/recipes/edit/{{recipe.id}}">Editar receita</a>
         </div>
        <div class="banner-img">
            <img src="{{recipe.image}}" alt="Imagem de {{recipe.image}} ">
        </div>
        <div class="card-title">
           <h1>{{recipe.title}}</h1>
           <p>por {{recipe.chef_name}}</p>
        </div>
        <div class="topic " id="ingredients">
        <h1>Ingredientes</h1> 
        <div class="topic-content">
            <ul>
               {% for ingredient in recipe.ingredients%}
               <li>{{ingredient}}</li>
               {%endfor%}
            </ul>
        </div>
        </div>
        <div class="topic" id="preparation">
        <h1>Modo de preparo</h1> 
            <ul>
               {% for preparation in recipe.preparation%}
               <li>{{preparation}}</li>
               {%endfor%}
            </ul>
          </div>
        </div>
        <div class="topic" id="information">
        <h1>Informações adicionais</h1> 
            <p>{{recipe.information}}</p>
        </div>
        </div>
    
{%endblock%}