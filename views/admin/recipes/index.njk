{% extends 'admin.njk' %}

{%block css%}
    <link rel="stylesheet" href="/admin.css">
{%endblock%}

{% block head %}
    <title>Gerenciar receitas | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="container">
        <div class="title">
            <h2>Gerenciar receitas</h2>
            <a class="btn" href="/admin/recipes/create">Nova receita</a>
        </div>

        <div class="receita-admin">
            {% for receita in receitas %}
                <div class="receita">
                    <img src="{{receita.image}}" alt="">
                    <div style="padding-left: 20px;">
                        <h3 class="nome">{{receita.title}}</h3>
                        <p class="autor">por {{receita.author}}</p>
                        <a href="/admin/recipes/{{receita.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    
{% endblock content %}